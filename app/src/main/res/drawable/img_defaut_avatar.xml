<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/default_avatar_background">
        <shape android:shape="oval">
            <size
                android:width="96dp"
                android:height="96dp" />
            <solid android:color="@color/default_avatar_background" />
