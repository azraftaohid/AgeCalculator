<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.FluentUI">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">?attr/fluentuiBackgroundColor</item>
        <item name="android:background">@null</item>
        <item name="android:statusBarColor">?android:colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColorHint">?attr/fluentuiPeoplePickerHintTextColor</item>
    </style>

    <style name="TextAppearance.Error" parent="TextAppearance.FluentUI.Caption">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="Base.AppTheme.Dialog" parent="Dialog.FluentUI">
        <item name="android:windowBackground">?attr/fluentuiBackgroundColor</item>
    </style>

    <style name="Dialog.AppTheme" parent="Base.AppTheme.Dialog" />
</resources>
